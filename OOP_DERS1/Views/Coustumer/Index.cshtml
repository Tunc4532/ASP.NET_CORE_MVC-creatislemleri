@using OOP_DERS1.ENTİTY1
@model List<coustemer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Corelayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Coustumer/DeleteCoustemer/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Coustumer/UpdateCoustemer/@item.Id" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Coustumer/AddCoustemer/" class="btn btn-warning">Yeni Müşteri Girişi</a>
