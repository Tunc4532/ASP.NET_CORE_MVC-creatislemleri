@model OOP_DERS1.ENTİTY1.coustemer

@{
    ViewData["Title"] = "UpdateCoustemer";
    Layout = "~/Views/Shared/_Corelayout.cshtml";
}

<h1>Müşteri Güncelleme Sayfası</h1>
<form method="post">
    <tr>
        @Html.Label("Müşteri Id")
        @Html.TextBoxFor(x=>x.Id,new {@class="form-control"})
        <br />
        @Html.Label("Müşteri Adı")
        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
        <br />
        @Html.Label("Müşteri Şehri")
        @Html.TextBoxFor(x=>x.City,new {@class="form-control"})
        <br />
    </tr>
    <button class="btn btn-warning">Müşteri Güncelle</button>
</form>
